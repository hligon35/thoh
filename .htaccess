# Apache .htaccess for The House of Humanity
# Performance and SEO optimizations

# Enable mod_rewrite
RewriteEngine On

# Security Headers (non-breaking)
<IfModule mod_headers.c>
    # HTTPS Security
    Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    
    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (Report-Only to avoid breaking current functionality)
    # Notes:
    # - Allow framed responses from Google Apps Script for the contact form's hidden iframe target
    # - Allow form submissions to script.google.com
    # - Keep broad https: allowances for images/connect to avoid breaking analytics/CDNs
    # - Consider tightening once verified in production
    Header always set Content-Security-Policy-Report-Only "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; style-src 'self' 'unsafe-inline' https:; font-src 'self' data: https:; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'self'; frame-src 'self' https://script.google.com; form-action 'self' https://script.google.com; upgrade-insecure-requests"

    # Frame options (redundant with frame-ancestors but kept for legacy support)
    Header always set X-Frame-Options "SAMEORIGIN"

    # Cross-Origin policies (safe defaults)
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Cross-Origin-Resource-Policy "same-origin"

    # Permissions Policy (restrict powerful features by default)
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), accelerometer=(), gyroscope=(), magnetometer=(), payment=()"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # HTML (short cache with stale-while-revalidate)
    ExpiresByType text/html "access plus 1 hour"
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, stale-while-revalidate=86400"
    </FilesMatch>
    
    # CSS and JavaScript (medium cache with immutable flag)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000, immutable"
    </FilesMatch>
    
    # Images (long cache with immutable flag)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Fonts (long cache)
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Documents
    ExpiresByType application/pdf "access plus 1 month"
    
    # Manifest and other files
    ExpiresByType application/manifest+json "access plus 1 week"
    ExpiresByType text/xml "access plus 1 hour"
</IfModule>

# ETag removal (for better caching)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Remove server signature
ServerTokens Prod

# Force HTTPS (uncomment when SSL is set up)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (optional - choose one)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Block access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevent access to version control
RedirectMatch 404 /\.git

# Optimize file delivery with additional performance features
<IfModule mod_mime.c>
    # Proper MIME types
    AddType application/font-woff2 .woff2
    AddType application/manifest+json .webmanifest
    AddType text/cache-manifest .appcache
    
    # Enable charset for text files
    AddCharset UTF-8 .html .css .js .xml .json .webmanifest
</IfModule>

# Preload key resources for performance
<IfModule mod_headers.c>
    # Add resource hints for critical resources
    <LocationMatch "\.(css)$">
        Header add Link "</styles.css>; rel=preload; as=style"
    </LocationMatch>
    
    # Enable Keep-Alive for better performance
    Header set Connection keep-alive
</IfModule>

# HTTP/2 Server Push (if supported)
<IfModule mod_http2.c>
    H2Push on
    H2PushResource /styles.css critical
    H2PushResource /script.js
</IfModule>
